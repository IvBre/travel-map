<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        <title>{% block title %}{% endblock %} - Travel map</title>
        <link rel="shortcut icon" type="image/ico" href="{{ asset('favicon.ico') }}"/>
        <meta name="description" content="World map with pins from all the places you visited." />
        <link rel="author" href="https://github.com/IvBre"/>
        <meta property="og:title" content="Travel Map" />
        <meta property="og:url" content="http://travel-map.ivanapetrovic.me" />
        <meta property="og:image" content="{{ absolute_url(asset('img/map.jpg')) }}" />
        <meta property="og:description" content="World map with pins from all the places you visited." />
    </head>

    <body>
        <header>
            {% block header %}{% endblock %}
        </header>
        <div class="flash-messages">
            {% for success in app.session.flashbag.get('success') %}
                <div class="success">{{ success }}</div>
            {% endfor %}
            {% for info in app.session.flashbag.get('info') %}
                <div class="info">{{ info }}</div>
            {% endfor %}
            {% for error in app.session.flashbag.get('error') %}
                <div class="error">{{ error }}</div>
            {% endfor %}
        </div>
        <main>
            {% block content %}{% endblock %}
        </main>

        <footer>
            {% include "footer.html.twig" %}
        </footer>

        {% block script %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        {% endblock %}
        <script>

            $(function() {
                setTimeout(function () {
                    $('.flash-messages').fadeOut(2000);
                }, 10000);
            });

            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-{{ app.google.ga_id }}', 'auto');
            ga('send', 'pageview');

        </script>
    </body>
</html>